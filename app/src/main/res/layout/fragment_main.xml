<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F16C63"
    tools:context=".ui.main.PlaceholderFragment">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pasteles disponibles"
        android:layout_gravity="center|top"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:background="#66C180"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Red Velvet p/10 personas"
        android:layout_gravity="left"
        android:layout_marginTop="280dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$280.00 "
        android:layout_gravity="left"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="70dp"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chocolate p/10 personas"
        android:layout_gravity="right"
        android:layout_marginTop="280dp"
        android:layout_marginRight="20dp"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$250.00 "
        android:layout_gravity="right"
        android:layout_marginTop="300dp"
        android:layout_marginRight="70dp"
        android:textColor="@color/black"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/redvelvet"
        android:layout_gravity="left"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="40dp"
        android:id="@+id/redvelvet"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/chocolate"
        android:layout_gravity="right"
        android:layout_marginTop="150dp"
        android:layout_marginRight="40dp"
        android:id="@+id/chocolate"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tres leches p/10 personas"
        android:layout_gravity="center|left"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$250.00 "
        android:layout_gravity="left|center"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="70dp"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zanahoria p/10 personas"
        android:layout_gravity="right|center"
        android:layout_marginTop="130dp"
        android:layout_marginRight="20dp"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$250.00 "
        android:layout_gravity="right|center"
        android:layout_marginTop="150dp"
        android:layout_marginRight="70dp"
        android:textColor="@color/black"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/tresleches"
        android:layout_gravity="center|left"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:id="@+id/tresleches"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/zanahoria"
        android:layout_gravity="center|right"
        android:layout_marginRight="40dp"
        android:layout_marginTop="40dp"
        android:id="@+id/zanahoria"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/naranja"
        android:layout_gravity="left|bottom"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="80dp"
        android:id="@+id/naranja"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tres leches p/10 personas"
        android:layout_gravity="bottom|left"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$250.00 "
        android:layout_gravity="bottom|left"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="70dp"
        android:textColor="@color/black"/>

</FrameLayout>